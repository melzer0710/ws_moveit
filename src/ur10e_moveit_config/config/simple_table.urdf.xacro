<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- Macro-Definition für einen simplen Tisch -->
  <xacro:macro name="simple_table" params="prefix parent xyz:='0 0 0' rpy:='0 0 0'">
    
    <link name="${prefix}table_top">
      <visual>
        <geometry>
          <box size="5.0 5.0 0.05"/> <!-- Länge, Breite, Höhe -->
        </geometry>
        <material name="brown">
          <color rgba="0.6 0.4 0.2 1"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <box size="1.2 0.8 0.05"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="5.0"/>
        <inertia ixx="0.1" ixy="0.0" ixz="0.0"
                 iyy="0.1" iyz="0.0"
                 izz="0.1"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
      </inertial>
    </link>

    <joint name="${prefix}table_fixed" type="fixed">
      <parent link="${parent}"/>
      <child link="${prefix}table_top"/>
      <origin xyz="${xyz}" rpy="${rpy}"/>
    </joint>

  </xacro:macro>

</robot>
